<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitspilani.tracktriggerJava">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TrackTrigger"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InventoryTrackerJava">
        <activity android:name="com.bitspilani.tracktriggerJava.Category.EditCategory" android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name="com.bitspilani.tracktriggerJava.Category.categoryDetails" android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitspilani.tracktriggerJava.Category.category_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.bitspilani.tracktriggerJava.Category.AddCategory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.bitspilani.tracktriggerJava.auth.PhoneLogin" />
        <activity android:name="com.bitspilani.tracktriggerJava.auth.Register" />
        <activity
            android:name="com.bitspilani.tracktriggerJava.Note.EditNote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.bitspilani.tracktriggerJava.Note.AddNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.InventoryTrackerJava.NoActionBar" />
        <activity
            android:name="com.bitspilani.tracktriggerJava.Note.NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.InventoryTrackerJava.NoActionBar" />
        <activity
            android:name="com.bitspilani.tracktriggerJava.dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.bitspilani.tracktriggerJava.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>